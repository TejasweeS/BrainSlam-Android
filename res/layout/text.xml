<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/brain_word_color"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/category_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="10" >

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="3dp"
            android:src="@drawable/forwardarrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Notifications"
            android:textColor="@android:color/white" />

        <ToggleButton
            android:id="@+id/toggle_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="2"
            android:checked="true" />

        <ImageView
            android:id="@+id/img_view_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="3dp"
            android:src="@android:drawable/ic_menu_share" />

        <ImageView
            android:id="@+id/img_view_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="3dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />
    </LinearLayout>
   
    
    <!-- Stream default row view -->
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/brain_word_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/category_row"
        android:visibility="visible"
        android:weightSum="10" >

        <TextView
            android:id="@+id/video_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="Category Name"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_cat_menu_expand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:padding="3dp"
                android:src="@drawable/white_circle" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:padding="3dp"
                android:src="@drawable/white_circle" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:padding="3dp"
                android:src="@drawable/white_circle" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>