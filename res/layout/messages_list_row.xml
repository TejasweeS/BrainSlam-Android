<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/message_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:src="@drawable/brainslamsymbol" />

    <TextView
        android:id="@+id/message_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/message_icon"
        android:layout_alignBaseline="@+id/message_icon"
          android:paddingTop="10dp"
        android:text="NewComments" 
        android:textSize="10dp"
        android:paddingLeft="5dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/message_time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/arrow_icon"
          android:layout_alignBaseline="@+id/message_time_textView"
          android:paddingTop="10dp"
        android:text="1.10AM" 
        android:textSize="10dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/message_details_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/message_icon"
        android:textSize="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:text=" Long Text Message"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/message_icon"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:src="@drawable/nextbutton" />

</RelativeLayout>