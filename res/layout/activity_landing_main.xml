                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/building_brainslam"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/landingpage_text"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/recommended"
                    android:textColor="@color/slam_word_color"
                    android:textSize="@dimen/activity_login_screen_textSize" />

                <ListView
                    android:id="@+id/activity_landing_tiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    
                    android:dividerHeight="0dp"
                    android:visibility="visible" >
                </ListView>

                <GridView
                    android:id="@+id/landing_tile_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnWidth="0dp"
                    android:numColumns="3"
                    android:visibility="gone"
                    android:verticalSpacing="0dp" >
                </GridView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginTop="5dp"
                    android:text="@string/categoriesandfriends"
                    android:textColor="@color/strip" />
            </LinearLayout>

            <ListView
                android:id="@+id/activity_landing_category_grid"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:divider="@color/white"
                android:dividerHeight="1dp"
                android:headerDividersEnabled="true"
                android:persistentDrawingCache="all"
                android:splitMotionEvents="false" >
            </ListView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>