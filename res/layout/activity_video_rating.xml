<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/topText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Your Video is Live"
        android:layout_gravity="center"
        android:textColor="@color/brain_word_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pleaseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="@string/Please_text"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/videothumb"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pleaseText"
        android:layout_centerInParent="true"
        android:src="@drawable/brainslam_bg" />

    <Button
        android:id="@+id/ratingValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/videothumb"
        android:layout_alignTop="@id/videothumb"
        android:layout_centerInParent="true"
        android:alpha="10"
        android:text=""
        android:visibility="invisible" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/brainslam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/brainslam_seekBar"
                    android:layout_alignTop="@+id/brainslam_seekBar"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/video_rating1"
                    android:textColor="@color/brain_word_color" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/brainslam_seekBar"
                    android:layout_alignTop="@+id/brainslam_seekBar"
                    android:layout_margin="3dp"
                    android:background="@drawable/video_rating_seekbar" />

                <SeekBar
                    android:id="@+id/brainslam_seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:max="29"
                    android:paddingLeft="7dp"
                    android:progressDrawable="@android:color/transparent"
                    android:thumb="@drawable/brainicon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/intense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/intense_seekBar"
                    android:layout_alignTop="@+id/intense_seekBar"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/video_rating2"
                    android:textColor="@color/brain_word_color" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/intense_seekBar"
                    android:layout_alignTop="@+id/intense_seekBar"
                    android:layout_margin="3dp"
                    android:background="@drawable/video_rating_seekbar" />

                <SeekBar
                    android:id="@+id/intense_seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:max="29"
                    android:paddingLeft="7dp"
                    android:progressDrawable="@android:color/transparent"
                    android:thumb="@drawable/brainicon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/clunker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/clunker_seekBar"
                    android:layout_alignTop="@+id/clunker_seekBar"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/video_rating3"
                    android:textColor="@color/brain_word_color" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/clunker_seekBar"
                    android:layout_alignTop="@+id/clunker_seekBar"
                    android:layout_margin="3dp"
                    android:background="@drawable/video_rating_seekbar" />

                <SeekBar
                    android:id="@+id/clunker_seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:max="29"
                    android:paddingLeft="7dp"
                    android:progressDrawable="@android:color/transparent"
                    android:thumb="@drawable/brainicon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/sick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/sick_seekBar"
                    android:layout_alignTop="@+id/sick_seekBar"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/video_rating4"
                    android:textColor="@color/brain_word_color" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/sick_seekBar"
                    android:layout_alignTop="@+id/sick_seekBar"
                    android:layout_margin="3dp"
                    android:background="@drawable/video_rating_seekbar" />

                <SeekBar
                    android:id="@+id/sick_seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:max="29"
                    android:paddingLeft="7dp"
                    android:progressDrawable="@android:color/transparent"
                    android:thumb="@drawable/brainicon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/disturbed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/disturbed_seekBar"
                    android:layout_alignTop="@+id/disturbed_seekBar"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/video_rating5"
                    android:textColor="@color/brain_word_color" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/disturbed_seekBar"
                    android:layout_alignTop="@+id/disturbed_seekBar"
                    android:layout_margin="3dp"
                    android:background="@drawable/video_rating_seekbar" />

                <SeekBar
                    android:id="@+id/disturbed_seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:max="29"
                    android:paddingLeft="7dp"
                    android:progressDrawable="@android:color/transparent"
                    android:thumb="@drawable/brainicon" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>