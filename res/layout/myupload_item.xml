<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="300dp"
    android:layout_margin="1dp"
    android:background="@drawable/darkgray_outline"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2" >

        <ImageView
            android:id="@+id/myupload_item_thumbnail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/ic_launcher"
            android:contentDescription="Thumbnail not found" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="8" >

        <ImageView
            android:id="@+id/myupload_item_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@android:drawable/ic_delete" />

        <TextView
            android:id="@+id/myupload_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/myupload_item_close"
            android:text="This is a Ttile"
            android:textSize="@dimen/myupload_item_title_textsize" />

        <ImageView
            android:id="@+id/myupload_view_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/myupload_item_id"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:src="@android:drawable/btn_star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/myupload_view_image"
            android:layout_alignTop="@id/myupload_view_image"
            android:layout_below="@id/myupload_item_id"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/myupload_view_image"
            android:gravity="center"
            android:text="1 Views"
            android:textSize="@dimen/myupload_item_view_textsize" />
    </RelativeLayout>

</LinearLayout>