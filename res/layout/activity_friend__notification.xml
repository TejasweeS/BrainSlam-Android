<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black" >

    <LinearLayout
        android:id="@+id/friends_linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white" >

        <ImageView
            android:id="@+id/frieand_notification_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/backarrow" 
            android:padding="15dp"
            android:layout_marginLeft="10dp"
           />

        <TextView
            android:id="@+id/friend_notification_pushtext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:padding="10dp"
            android:text="@string/topbar_title"
            android:textSize="@dimen/friendNotification_Category_title_textsize"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/friends_linearLayout1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/friendnotification_mynotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="15dp"
                android:text="@string/notication_category_textview1"
                android:textColor="@color/brain_word_color"
                android:textSize="@dimen/friendNotification_Category_title_textsize" />

            <TextView
                android:id="@+id/friends_notification_Hline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/friendnotification_mynotification"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/new_uploads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/friends_notification_Hline"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/my_notification_category_textview1"
                android:textColor="@android:color/white" />

            <ToggleButton
                android:id="@+id/upload_toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/friendnotification_mynotification"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/follower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/new_uploads"
                android:layout_below="@+id/upload_toggleButton"
                android:layout_marginTop="10dp"
                android:text="@string/my_notification_category_textview2"
                android:textColor="@android:color/white" />

            <ToggleButton
                android:id="@+id/follower_toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/upload_toggleButton"
                android:layout_alignTop="@+id/follower" />

            <TextView
                android:id="@+id/home_stream_updates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/follower"
                android:layout_below="@+id/follower_toggleButton"
                android:layout_marginTop="10dp"
                android:text="@string/my_notification_category_textview3"
                android:textColor="@android:color/white" />

            <ToggleButton
                android:id="@+id/home_stream_toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/follower_toggleButton"
                android:layout_alignTop="@+id/home_stream_updates" />

            <TextView
                android:id="@+id/new_featured_videos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/home_stream_updates"
                android:layout_below="@+id/home_stream_toggleButton"
                android:layout_marginTop="10dp"
                android:text="@string/my_notification_category_textview4"
                android:textColor="@android:color/white" />

            <ToggleButton
                android:id="@+id/new_featured_toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/home_stream_toggleButton"
                android:layout_alignTop="@+id/new_featured_videos" />

            <TextView
                android:id="@+id/new_messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/new_featured_videos"
                android:layout_below="@+id/new_featured_toggleButton"
                android:layout_marginTop="10dp"
                android:text="@string/my_notification_category_textview5"
                android:textColor="@android:color/white" />

            <ToggleButton
                android:id="@+id/new_messages_toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/new_featured_toggleButton"
                android:layout_alignTop="@+id/new_messages" />
             <TextView
                android:id="@+id/friends_notification_Hline2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/new_messages_toggleButton"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/friendnotification_crew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/friends_notification_Hline2"
                android:padding="15dp"
                android:text="@string/notication_category_textview2"
                android:textColor="@color/brain_word_color"
                android:textSize="@dimen/friendNotification_Category_title_textsize" />

            <TextView
                android:id="@+id/friends_notification_Hline3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/friendnotification_crew"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/crew_activity_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/friends_notification_Hline3"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/crew_category_textview1"
                android:textColor="@android:color/white" />

            <ToggleButton
                android:id="@+id/crew_activity_update_toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/friendnotification_crew"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/new_follwer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/crew_activity_update"
                android:layout_below="@+id/crew_activity_update_toggleButton"
                android:layout_marginTop="10dp"
                android:text="@string/crew_category_textview2"
                android:textColor="@android:color/white" />

            <ToggleButton
                android:id="@+id/new_follower_toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/crew_activity_update_toggleButton"
                android:layout_alignTop="@+id/new_follwer" />

            <TextView
                android:id="@+id/friend_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/new_follwer"
                android:layout_below="@+id/new_follower_toggleButton"
                android:layout_marginTop="10dp"
                android:text="@string/crew_category_textview3"
                android:textColor="@android:color/white" />

            <ToggleButton
                android:id="@+id/friend_request_toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/new_follower_toggleButton"
                android:layout_alignTop="@+id/friend_request" />

            <TextView
                android:id="@+id/new_playlist_subscriber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/friend_request"
                android:layout_below="@+id/friend_request_toggleButton"
                android:layout_marginTop="10dp"
                android:text="@string/crew_category_textview4"
                android:textColor="@android:color/white" />

            <ToggleButton
                android:id="@+id/new_playlist_subscriber_toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/friend_request_toggleButton"
                android:layout_alignTop="@+id/new_playlist_subscriber" />
            <TextView
                android:id="@+id/friends_notification_Hlin4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/new_playlist_subscriber_toggleButton"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/friendnotification_playlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/new_playlist_subscriber_toggleButton"
                android:padding="15dp"
                android:text="@string/notication_category_textview3"
                android:textColor="@color/brain_word_color"
                android:textSize="@dimen/friendNotification_Category_title_textsize" />

            <TextView
                android:id="@+id/friends_notification_Hline5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/friendnotification_playlist"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/new_playlist_subscriber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/friends_notification_Hline5"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/playlist_category_textview1"
                android:textColor="@android:color/white" />

            <ToggleButton
                android:id="@+id/new_playlist_subscriber1_toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/friendnotification_playlist"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/playlist_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/new_playlist_subscriber1"
                android:layout_below="@+id/new_playlist_subscriber1_toggleButton"
                android:layout_marginTop="10dp"
                android:text="@string/playlist_category_textview2"
                android:textColor="@android:color/white" />

            <ToggleButton
                android:id="@+id/playlist_update_toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/new_playlist_subscriber1_toggleButton"
                android:layout_alignTop="@+id/playlist_update" />
            <TextView
                android:id="@+id/friends_notification_Hline6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/playlist_update_toggleButton"
                android:background="@android:color/white" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>