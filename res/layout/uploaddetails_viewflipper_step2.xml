<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/step_two_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/slam_word_color" >

        <TextView
            android:id="@+id/left_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/Step2"
            android:background="@android:color/white"
            android:gravity="center" />

        <TextView
            android:id="@+id/Step2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:text="@string/uplaod_details_step2_textview1"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/right_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/Step2"
            android:background="@android:color/white"
            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/step2_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/step_two_topbar"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tell_about_your"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/uplaod_details_step2_textview2"
            android:textColor="@android:color/white"
            android:textSize="@dimen/activity_upload_details_titlesize" />
        <!--
    <TextView
        android:id="@+id/upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/uplaod_details_step2_textview3"
        android:textColor="@android:color/white"
        android:textSize="@dimen/activity_upload_details_titlesize" />
        -->

        <RelativeLayout
            android:id="@+id/world"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.2dp"
            android:layout_weight="2"
            android:background="@android:color/black"
            android:onClick="onClick" >

            <TextView
                android:id="@+id/uploaddetails_theworld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="@string/uplaod_details_step2_textview4"
                android:textColor="@android:color/white"
                android:textSize="@dimen/activity_upload_details_titlesize" />

            <TextView
                android:id="@+id/everyone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uploaddetails_theworld"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/uplaod_details_step2_textview5"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/everyone_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:src="@drawable/world" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/crew_pick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.2dp"
            android:layout_weight="2"
            android:background="@android:color/black"
            android:onClick="onClick" >

            <TextView
                android:id="@+id/uploaddetails_mycrew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="@string/uplaod_details_step2_textview6"
                android:textColor="@android:color/white"
                android:textSize="@dimen/activity_upload_details_titlesize" />

            <TextView
                android:id="@+id/only_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uploaddetails_mycrew"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/uplaod_details_step2_textview7"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/friend_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:src="@drawable/mycrew" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/handpick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.2dp"
            android:layout_weight="2"
            android:background="@android:color/black"
            android:onClick="onClick" >

            <TextView
                android:id="@+id/uploaddetails_handpick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="@string/uplaod_details_step2_textview8"
                android:textColor="@android:color/white"
                android:textSize="@dimen/activity_upload_details_titlesize" />

            <TextView
                android:id="@+id/selected_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uploaddetails_handpick"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/uplaod_details_step2_textview9"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/handpick_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:src="@drawable/handpick" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/HandPick"
        android:visibility="gone"
        android:background="@color/black"
        android:layout_height="match_parent"
        android:layout_below="@id/step_two_topbar"
        android:orientation="vertical" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/brain_word_color"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="10" >

            <EditText
                android:id="@+id/handpic_search_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Done" />
        </TableRow>

        <ListView
            android:id="@+id/hand_pic_list_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </ListView>
    </LinearLayout>

</RelativeLayout>