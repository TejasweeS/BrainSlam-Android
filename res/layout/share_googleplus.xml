<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdcdc"
    android:orientation="vertical"
    android:padding="20dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:text="Share with Google+"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/brain_word_color" />

        <EditText
            android:id="@+id/share_prefill_edit"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="30dip"
            android:layout_marginTop="10dp"
            android:ellipsize="start"
            android:gravity="top|left"
            android:hint="Share what&apos;s new..."
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:textAppearance="?android:attr/textAppearanceMedium" >

           
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <Button
                android:id="@+id/send_interactive_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/signup_btnclicked"
                android:text="Share"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/buttonmedia"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/signup_btnclicked"
                android:text="Share with Media"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>